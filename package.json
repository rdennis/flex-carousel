{
  "name": "flex-carousel",
  "private": true,
  "version": "0.0.1",
  "description": "A carousel using flexbox.",
  "main": "build/flex-carousel.js",
  "directories": {
    "test": "test"
  },
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-preset-babili": "^0.1.4",
    "babel-preset-env": "^1.6.0",
    "documentation": "^5.0.1",
    "eslint": "^4.3.0",
    "http-server": "^0.10.0"
  },
  "scripts": {
    "clean": "rm -rf build",
    "lint": "eslint src/**.js",
    "prebuild": "npm run lint",
    "build:min": "mkdir -p build && babel src/flex-carousel.js --out-file build/flex-carousel.min.js --presets=babili",
    "build": "npm run build:min && babel src/flex-carousel.js --out-file build/flex-carousel.js --source-maps ",
    "watch": "npm run build:min -- --watch & npm run build -- --watch",
    "documentation": "documentation readme src/flex-carousel.js --section=API",
    "web": "npm run -s build && http-server ./",
    "test": "npm run -s build && http-server ./",
    "dev": "npm run -s watch & npm run -s web"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rdennis/flex-carousel.git"
  },
  "author": "Robert Dennis <rdennis.dev@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rdennis/flex-carousel/issues"
  },
  "homepage": "https://github.com/rdennis/flex-carousel#readme"
}
